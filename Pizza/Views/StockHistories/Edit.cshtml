@model Pizza.StockHistory

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_sidePanelPage.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>StockHistory</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.stockHistoryID)

        <div class="form-group">
            @Html.LabelFor(model => model.stockID, "stockID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("stockID", String.Empty)
                @Html.ValidationMessageFor(model => model.stockID)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.quantityConsumed, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.quantityConsumed)
                @Html.ValidationMessageFor(model => model.quantityConsumed)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.comments, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.comments)
                @Html.ValidationMessageFor(model => model.comments)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.createdOn, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.createdOn)
                @Html.ValidationMessageFor(model => model.createdOn)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
