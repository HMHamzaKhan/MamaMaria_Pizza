@model  Pizza.ViewModels.OrderViewModel

@{
    ViewBag.Title = "get_order_by_id";
    Layout = "~/Views/Shared/_sidePanelPage.cshtml";
    var tax = Convert.ToDouble(Model.customerDetails.toalprice) * 0.1;
    var taxTotal = Convert.ToDouble(Model.customerDetails.toalprice) + tax;
}

@section Styles{

    <style>
        .popover {
            padding: 15px;
            color: ButtonShadow;
            opacity: 1 !important;
            background-color: #F2F2F2;
            margin-right: 20px;
        }

        .justforpointer {
            cursor: pointer;
        }
    </style>

}
<div class="mt-3" style="padding: 20px; background-color:#f2f2f2;">
    <h6>Name           : @Model.customerDetails.FristName</h6>
    <h6>Address        : @Model.customerDetails.Address</h6>
    <h6>Remarks        : @Model.customerDetails.remarks</h6>
    <h6>Contact Number : @Model.customerDetails.Contact</h6>
    <h6>Sub Total Price    : @Model.customerDetails.toalprice$</h6>
    <h6>Area Tax ( 10% ): @Math.Round(tax, 2)$  </h6>
    <h6>Total Price : @Math.Round(taxTotal, 2)$  </h6>

</div>

<div class="justify-content-center ftco-animate mt-2 heading-section">
    <h3 style="text-align:center;" id="name"> Order Code :  @Model.customerDetails.ordecode</h3>
    <p class="flip"><span class="deg1"></span><span class="deg2"></span><span class="deg3"></span></p>
</div>




<div style="overflow-x:auto;" class="ftco-animated">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Image</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Quantity</th>
                <th scope="col">Price </th>
                <th scope="col">Remarks </th>
            </tr>
        </thead>
        <tbody>

            @foreach (var items in Model.orderlist)
            {
                <tr>
                    <td class="align-middle" ><img style="height:70px; width:70px;" src="~/content/images/@items.ItemImage" /></td>
                    <th class="align-middle" scope="row">@items.ItemName </th>
                    <td class="align-middle">@items.ItemDesc </td>
                    <th class="align-middle" scope="row">@items.ItemQuantity </th>
                    <td class="align-middle price" id="price">@items.ItemPrice $</td>
                    <td class="align-middle" id="price"><p class="justforpointer" data-toggle="popover" data-placement="left" title="Remarks" data-content="@items.ItemRemarks" style="display: block; overflow: hidden; white-space: nowrap; text-overflow: ellipsis; width: 200px;">@items.ItemRemarks</p> </td>
                </tr>
            }
        </tbody>
    </table>
</div>


<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
<style>
    .popover {
        padding: 15px;
        color: ButtonShadow;
        opacity: 1 !important;
        background-color: #F2F2F2;
    }

    .justforpointer {
        cursor: pointer;
    }
</style>

<script>

    $(document).ready(function () {

        $('table tbody tr td p').popover();//.popover();
    });



</script>