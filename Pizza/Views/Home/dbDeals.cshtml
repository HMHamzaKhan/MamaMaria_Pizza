@model Pizza.ViewModels.DealsViewModel

@{
    ViewBag.Title = "dbDeals";
}

<h2>dbDeals</h2>

<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center mb-5 pb-3">
            <div class="col-md-7 heading-section ftco-animate text-center">
                <h2 class="mb-4">Deals and Coupons</h2>
                <p>In-Store Combo Deals.</p>
            </div>
        </div>
    </div>
    <div class="container-wrap">
        <div class="row no-gutters d-flex">
              @{  int count = 0;}
            @foreach (var item in Model.allDeals)
            {
                if (count < 3)
                {
                    
                 <div class="col-lg-4 d-flex ftco-animate">
                <div class="services-wrap d-flex">
                    <a href="#" class="img" style="background-image: url(/Content/images/@item.DealImage);"></a>
                    <div class="text p-4">
                        <h3>@item.DealName</h3>
                        <<p>@item.DealDesc</p>
                        <p class="price"><span>$@item.DealPrice</span> <a href="#" class="ml-2 btn btn-white btn-outline-white">Order</a></p>
                    </div>
                </div>
            </div>
                }
                else
                {
                    <div class="col-lg-4 d-flex ftco-animate fadeInUp ftco-animated">
                <div class="services-wrap d-flex">
                    <a href="#" class="img order-lg-last" style="background-image: url(/Content/images/@item.DealImage);"></a>
                    <div class="text p-4">
                        <h3>@item.DealName</h3>
                        <p>@item.DealDesc</p>
                        <p class="price"><span>$@item.DealPrice</span> <a href="#" class="ml-2 btn btn-white btn-outline-white">Order</a></p>
                    </div>
                </div>
            </div>
                }
                count++;
                
            }
        </div>
    </div>
    @*Deals Sections End*@





    @*Party Deals Start*@
    <div class="container">
        <div class="row justify-content-center mb-5 pb-3 mt-5 pt-5">
            <div class="col-md-7 heading-section text-center ftco-animate fadeInUp ftco-animated">
                <h2 class="mb-4">Party Deals</h2>
                <p class="flip"><span class="deg1"></span><span class="deg2"></span><span class="deg3"></span></p>
                <p class="mt-5">Enjoy our Mamamaria party deals within your suitable budget. </p>
            </div>
        </div>
        <div class="row">
            @{int scount = 0;}
            @foreach (var item in Model.allSpeacialDeals)
            {
                
                if (count < 2)
                {    
                  <div class="col-md-6">
            
                <div class="pricing-entry d-flex ftco-animate fadeInUp ftco-animated">
                    @*<div class="img" style="background-image: url(images/pizza-1.jpg);"></div>*@
                    <div class="desc pl-3">
                        <div class="d-flex text align-items-center">
                            <h3><span>@item.DealName</span></h3>
                            <span class="price">$@item.DealPrice</span>
                        </div>
                        <div class="d-block">
                            <p>@item.DealDesc</p>
                        </div>
                    </div>
                </div>
            </div>
                }
                else
                {
                     <div class="col-md-6">
                <div class="pricing-entry d-flex ftco-animate fadeInUp ftco-animated">
                    @*<div class="img" style="background-image: url(images/pizza-6.jpg);"></div>*@
                    <div class="desc pl-3">
                        <div class="d-flex text align-items-center">
                            <h3><span>@item.DealName</span></h3>
                            <span class="price">$@item.DealPrice</span>
                        </div>
                        <div class="d-block">
                            <p>@item.DealDesc</p>
                        </div>
                    </div>
                </div>
            </div>   
                }   
            }

        </div>
    </div>
</section>
