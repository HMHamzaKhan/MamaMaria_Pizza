            @Html.DisplayFor(modelItem => item.TotalPriceOfItems)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.QuantityRemainig)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.createdOn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.perPieceItemPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Item.ItemName)
        </td>
